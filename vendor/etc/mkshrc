#yujintao1@meizu.com #[1137727]
: ${HOSTNAME:=$(getprop ro.product.mobile.name)}
: ${USER:=$(id -un)}

if (( USER_ID )); then PS1='$'; else PS1='#'; fi
PS4='[$EPOCHREALTIME] '; PS1='${|
	local e=$?

	(( e )) && REPLY+="$e|"

	return $e
}$USER@$HOSTNAME:${PWD:-?} '"$PS1 "
